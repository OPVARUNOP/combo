{
  "name": "combo-backend",
  "version": "1.0.0",
  "description": "Backend for COMBO music streaming app with Firebase",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "build": "echo 'Build complete'",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:api": "node scripts/test-api.js",
    "test:firebase": "node scripts/test-connection.js",
    "test:b2": "node scripts/test-b2-upload.js",
    "verify:firebase": "node scripts/verify-firebase.js",
    "setup:firebase": "node scripts/setup-firebase.js",
    "init:firebase": "node scripts/initFirebaseDB.js",
    "deploy": "firebase deploy --only functions,firestore,hosting,storage",
    "deploy:staging": "firebase use staging && npm run deploy",
    "deploy:production": "firebase use production && npm run deploy",
    "deploy:rules": "node scripts/deploy-firestore-rules.js",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/firestore": "^7.11.6",
    "@google-cloud/storage": "^6.12.0",
    "@sentry/node": "^7.91.0",
    "apicache": "^1.6.3",
    "axios": "^1.12.2",
    "backblaze-b2": "^1.7.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.9.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.2.0",
    "http-status": "^2.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "mongoose": "^8.18.3",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "firebase-tools": "^14.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/scripts/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/index.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "directories": {
    "test": "test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
