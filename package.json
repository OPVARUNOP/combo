{
  "name": "combo-backend",
  "version": "1.0.0",
  "description": "Backend for COMBO music streaming app with Firebase",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build complete'",
    "test": "jest",
    "test:firebase": "node test-firebase.js",
    "test:rtdb": "node scripts/test-rtdb.js",
    "demo:database": "node scripts/demo-database.js",
    "test:api": "node scripts/test-api.js",
    "verify:firebase": "node verify-firebase.js",
    "init:firebase": "node scripts/init-firebase.js",
    "setup:firebase": "node scripts/setup-firebase.js"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test-*.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
