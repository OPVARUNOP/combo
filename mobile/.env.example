# COMBO Mobile App - Example Environment Variables
# Copy this file to .env and fill in your actual values

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Backend API Configuration
API_BASE_URL=https://your-api-domain.com/api
API_TIMEOUT=10000

# Jamendo API (for music streaming)
JAMENDO_CLIENT_ID=your_jamendo_client_id
JAMENDO_CLIENT_SECRET=your_jamendo_client_secret

# App Configuration
APP_ENV=development
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# Security (Generate secure random strings for production)
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Push Notifications
ONESIGNAL_APP_ID=your_onesignal_app_id

# Social Features
ENABLE_SOCIAL_FEATURES=true
MAX_FOLLOWERS_PER_USER=10000

# Content Management
MAX_UPLOAD_SIZE=104857600
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,aac
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Performance
CACHE_TTL=3600
MAX_CACHE_SIZE=104857600
ENABLE_OFFLINE_MODE=true
