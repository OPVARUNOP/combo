# ===================================
# Server Configuration
# ===================================
NODE_ENV=development
PORT=8080

# ===================================
# Firebase Configuration
# ===================================
# Get these values from Firebase Console > Project Settings > Service accounts
# For production, use SERVICE_ACCOUNT_KEY environment variable instead
FIREBASE_PROJECT_ID=combo-624e1
FIREBASE_DATABASE_URL=https://combo-624e1-default-rtdb.firebaseio.com
FIREBASE_DATABASE_SECRET=mqucsRC7MHfDLdYSbNTU1srwlK4l6RsOtKKgqB4m

# Set to 'true' to disable authentication (for development only)
DISABLE_AUTH=false

# ===================================
# Security Settings
# ===================================
# Trust proxy (set to '1' when behind a proxy like Nginx or Cloud Run)
TRUST_PROXY=0

# JWT Secret for authentication tokens
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Rate Limiting (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ===================================
# External API Keys
# ===================================
# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key

# SoundCloud API
SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id

# Audius API
AUDIUS_API_URL=https://audius-metadata-1.figment.io/v1

# ===================================
# Redis Configuration (for caching)
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================================
# Production Deployment
# ===================================
# For production, set this to a base64-encoded service account key
# Generate with: cat service-account-key.json | base64 -w 0
SERVICE_ACCOUNT_KEY=
